extends ../_template
block source
  - var url_js = 'works.js'

block variables
  - var title = 'Portfolio page'

block user__desc 
  h2.heading__sub 
    | Станислав Жуковский
  span.user__prof
    | Личный сайт веб разработчика
    
block arrow__down
  .header__arrow-wrap
    a(href="#works")
      svg(viewbox="0 0 100 100")
        use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")

block triangle
  .header__triangle
    .triangle
      svg(class="rectangle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none")
          polygon.triangle__left(points="0 0, 0 100, 50 100")
          polygon.triangle__right(points="100 0, 100 100, 50 100")

block header__bottom-heading
  .header__bottom-wrap
    .stars__bg-wrap
      svg.stars
        use(xlink:href='../assets/img/sprite/sprite.svg#stars_1')
    h1.heading__main
      | Мои работы  

block content
    div(id="page-preloader").preloader
      .loader
        span(id="load-perc") 0%
    section(id="works").works 
      .slider
        .slider__main-preview
          .main-preview__content
            .heading__sub-wrap
              h2.heading__sub
                | Сайт школы онлайн образования
            .main-preview__desc
              | HTML , CSS, JAVASCRIPT
            .main-preview-btn
              a(href="#").btn.btn--preview
                svg.icon
                  use(xlink:href = '../assets/img/sprite/sprite.svg#link')
                span
                  | Посмотреть сайт
        .slider__small-preview

        .slider__preview-nav
          .slider__preview-down
            .overlay__preview.overlay__preview--left
              a(href="#").arrow__link
                svg(viewbox="0 0 100 100")
                  use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")
          .slider__preview-up
            .overlay__preview.overlay__preview--right
              a(href="#").arrow__link.arrow--up
                svg(viewbox="0 0 100 100")
                  use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")

    section.connect-me
      .container
        .heading__wrap
            h2.heading__main
              | Что обо мне говорят
        ul.list.row
          li.list__item
            .reference
                .user__wrap-img
                     .user__img.user__reference-1
                p.reference__desc 
                  | Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                  i(aria-hidden="true").fa.fa-quote-left
                span.reference__user-name
                  | Ковальчук Дмитрий
                span.reference__user-status
                  | - основатель Loftschool
          li.list__item
            .reference
                .user__wrap-img
                     .user__img.user__reference-2
                p.reference__desc
                  | Этот код выдержеит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
                  i(aria-hidden="true").fa.fa-quote-left
                span.reference__user-name
                  | Сабанцев Владимир
                span.reference__user-status
                  | - преподователь
        .row
          .form__wrap-contacts.blur
            form(method="post" action="Menistrel2005@yandex.ru").form.form__contacts
              .form__contacts-top
                .heading__sub-wrap
                  h2.heading__sub
                    | Связаться со мной
                .form__inputs-wrap
                  input(type="text" name="name" placeholder="Ваше имя" required).form__input
                .form__inputs-wrap
                  input(type="text" name="email" placeholder="Ваше email" required).form__input
                .form__inputs-wrap
                  textarea(name="user_message" placeholder="Ваше сообщение" rows="7").form__input
              .form__contact-bottom
                button(type="submit").btn.btn__submit
                  | Отправить
                button(type="reset").btn.btn__clear
                  | Очистить
      .works__arrow-wrap
        a(href="#back").arrow--up
          svg(viewbox="0 0 100 100")
            use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")      

block footer
  - var footer_subclass =  " works"
  include ../common/_footer