extends ../_template
block source
  - var url_js = 'works.js'

block variables
  - var title = 'Portfolio page'

block user__desc 
  h2.heading__sub 
    | Станислав Жуковский
  span.user__prof
    | Личный сайт веб разработчика
    
block arrow__down
  .header__arrow-wrap
    a(href="#")
      svg(viewbox="0 0 100 100")
        use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")

block triangle
  .header__triangle
    .triangle
      svg(class="rectangle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none")
          polygon.triangle__left(points="0 0, 0 100, 50 100")
          polygon.triangle__right(points="100 0, 100 100, 50 100")

block header__bottom-heading
  .header__bottom-wrap
    .stars__bg-wrap
      svg.stars
        use(xlink:href='../assets/img/sprite/sprite.svg#stars_1')
    h1.heading__main
      | Мои работы  

block content
    .works 
      .slider
        .slider__main-preview
          .main-preview__content
            .heading__sub-wrap
              h2.heading__sub
                | Сайт школы онлайн образования
            .main-preview__desc
              | HTML , CSS, JAVASCRIPT
            .main-preview-btn
              a(href="#").btn.btn--preview
                svg.icon
                  use(xlink:href = '../assets/img/sprite/sprite.svg#link')
                span
                  | Посмотреть сайт
        .slider__small-preview

        .slider__preview-nav
          .slider__preview-down
            .overlay__preview.overlay__preview--left
              a(href="#").arrow__link
                svg(viewbox="0 0 100 100")
                  use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")
          .slider__preview-up
            .overlay__preview.overlay__preview--right
              a(href="#").arrow__link.arrow--up
                svg(viewbox="0 0 100 100")
                  use(xlink:href="../assets/img/sprite/sprite.svg#arrow_down")



block footer
  - var footer_subclass =  " works"
  include ../common/_footer