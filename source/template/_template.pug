include common/_mixins

block variables
html
  include common/_generals

  body
    .main__wrapper
      include ./common/_header
      .header__burger
        .burger.no-animation
          span.burger__line
      .socials.top
        ul.social__list.list
          each href, item in {'https://vk.com/staniszhuk' : '../assets/img/sprite/sprite.svg#vk', 'skype:ylitylia': '../assets/img/sprite/sprite.svg#skype' , 'https://github.com/StasZhuk': '../assets/img/sprite/sprite.svg#github'}
